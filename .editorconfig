# http://editorconfig.org
root = true

[*]
indent_size = 2
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_style = space
indent_size = 2

[{Makefile,**.mk}]
indent_style = tab
[*.scss]
indent_size = 2
indent_style = space

[{.eslintrc,.scss-lint.yml}]
indent_style = space
indent_size = 2
